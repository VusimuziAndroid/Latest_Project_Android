<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_widthPercent="140%"
        android:orientation="horizontal"
        android:paddingLeft="-16dp"
        app:layout_marginLeftPercent="-16%"
        android:background="#3498DB"

        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <!-- The Tab Host for the to be displayed on the screen -->
        <TabHost
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tabHost"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            app:layout_marginStartPercent="33%"
            >
            <!-- The Linearlayout for holding the two vertical linearlayouts -->
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!-- The Tab Widget -->

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="314dp"
                    android:layout_height="wrap_content"
                    ></TabWidget>

                <!-- The FrameLayout for holding two linearlayout -->
                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_aspectRatio="100%"
                    app:layout_heightPercent="100%"

                    android:focusable="false">
                    <!-- The Linearlayout for the storyline (first tab) -->
                    <LinearLayout
                        android:id="@+id/HOME"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="STORYLINES"
                        android:focusable="false"
                        android:orientation="vertical"
                        app:layout_marginLeftPercent="10%"
                        >
                      <!--  <LinearLayout android:id="@+id/linearLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageButton android:id="@+id/imgbtnOne"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#FFFFFF"
                                android:src="@drawable/ic_drafts_black_48dp"/>
                                <ImageButton android:id="@+id/imgbtnTwo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#FFFFFF"
                                    android:src="@drawable/ic_show_chart_black_48dp"/>
                        </LinearLayout>-->
                       <!-- <android.support.design.widget.FloatingActionButton android:src="@drawable/ic_home_white_48dp"
                            app:fabSize="normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/> -->

                       <!-- <CoordinatorLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <android.support.v7.widget.RecyclerView android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </android.support.v7.widget.RecyclerView>
                        </CoordinatorLayout> -->
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/PROFILE"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="STORYLINES"
                        android:focusable="false"
                        android:orientation="vertical"
                        android:paddingLeft="-10dp"
                        app:layout_marginLeftPercent="0%"
                        >

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/CHATS"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="STORYLINES"
                        android:focusable="false"
                        android:orientation="vertical"
                        app:layout_marginLeftPercent="0%"
                        >

                    </LinearLayout>

                    <!-- The Linearlayout for the COLLECTIONS (second tab) -->
                    <LinearLayout
                        android:id="@+id/GROUPS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_marginLeftPercent="0%"
                        android:background="#FFFFFF"
                        android:text="COLLECTIONS"
                        android:focusable="false"
                        android:orientation="vertical">
                    </LinearLayout>

                    <!-- The Linearlayout for the COLLECTIONS (second tab) -->
                    <LinearLayout
                        android:id="@+id/SEARCH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_marginLeftPercent="0%"
                        android:paddingLeft="-10dp"
                        android:background="#FFFFFF"
                        android:text="SEARCH"
                        android:focusable="false"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/MENU"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="STORYLINES"
                        android:focusable="false"
                        android:orientation="vertical"
                        android:paddingLeft="-10dp"
                        app:layout_marginLeftPercent="0%"
                        >

                    </LinearLayout>

                    <!-- The Linearlayout for the COLLECTIONS (second tab) -->

                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </LinearLayout>
</RelativeLayout>
