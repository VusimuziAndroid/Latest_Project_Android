<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_location"
    tools:context="android.latest_project_android.LocationActivity"
    android:background="#FFFFFF">

    <LinearLayout android:id="@+id/newProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="80%"
        app:layout_marginTopPercent="15%"
        app:layout_marginLeftPercent="9%"
        android:orientation="vertical">
        <TextView android:id="@+id/tvHeading1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:text="What's your location ?"/>
        <TextView android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHeading"
            android:layout_marginTop="25dp"
            app:layout_marginTopPercent="18%"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="See people,jobs, and news in your area"/>
      <!--  <EditText android:id="@+id/etJobTitle"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMessage"
            android:layout_marginTop="34dp"
            app:layout_marginTopPercent="20%"
            android:textColor="#000000"
            android:inputType="text"
            android:textSize="15sp"
            android:hint="Job title (Current or previous)"
            /> -->
        <Spinner android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:drawSelectorOnTop="true"
            android:entries="@+id/Countries"/>
        <EditText android:id="@+id/etPostCode"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="21%"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/tvJobTitle"
            android:textColor="#000000"
            android:inputType="text"
            android:textSize="15sp"
            android:hint="PostCode"/>
      <!--  <LinearLayout android:id="@+id/linearLayout11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCompanyName"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">
            <Spinner android:id="@+id/spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:prompt="OIUNTRY"
                android:entries="@+id/Countries"/>
            <TextView android:id="@+id/tvPostCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="#000000"/>
        </LinearLayout>-->
        <Button android:id="@+id/bContinue"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout11"
            app:layout_marginLeftPercent="10%"
            app:layout_widthPercent="91%"
            app:layout_heightPercent="7%"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="0dp"
            android:textColor="#FFFFFF"
            android:text="CONTINUE"
            android:background="#008CC9"
            android:onClick="onClick" />
    </LinearLayout>

</android.support.percent.PercentRelativeLayout>
