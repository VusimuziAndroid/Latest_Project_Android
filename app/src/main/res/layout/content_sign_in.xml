<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg_color">

    <ImageView
        android:id="@+id/imgIcons1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="90%"
        app:layout_marginTopPercent="15%"
        app:layout_marginLeftPercent="5%"
        android:background="@drawable/linkedin_logo" />
    <LinearLayout android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="70%"
        app:layout_marginTopPercent="40%"
        app:layout_marginLeftPercent="15%"
        android:orientation="vertical">
        <EditText android:id="@+id/etUsername"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:inputType="text"
            android:hint="Username"
            app:layout_marginLeftPercent="12%"
            app:layout_marginTopPercent="4%"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF" />
        <EditText android:id="@+id/etPassword"
            android:layout_width="250dp"
            android:layout_below="@+id/etUsername"
            android:layout_height="wrap_content"
            app:layout_widthPercent="250%"
            android:inputType="textPassword"
            android:backgroundTint="#FFFFFF"
            android:hint="Password"
            android:textColor="#FFFFFF"
            app:layout_marginLeftPercent="0%"
            app:layout_marginTopPercent="8%"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="250%"
            android:layout_below="@+id/etPassword"
            android:inputType="textPassword"
            android:backgroundTint="#FFFFFF"
            android:hint="Confirm Password"
            android:textColor="#FFFFFF"
            app:layout_marginLeftPercent="0%"
            app:layout_marginTopPercent="25%"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <Button
            android:id="@+id/bJoin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ConfirmPassword"
            app:layout_marginLeftPercent="7%"
            app:layout_widthPercent="91%"
            app:layout_heightPercent="7%"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            android:text="@string/buttontext2"
            android:background="@drawable/gradient_button_bg_color"
            android:onClick="onClick" />
    </LinearLayout>


</android.support.percent.PercentRelativeLayout>
