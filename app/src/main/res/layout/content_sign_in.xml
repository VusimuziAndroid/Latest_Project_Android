<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="70%"
        app:layout_marginTopPercent="29%"
        app:layout_marginLeftPercent="15%"
        android:orientation="vertical">
        <EditText android:id="@+id/etUsername"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:inputType="text"
            android:hint="Username"
            app:layout_marginLeftPercent="12%"
            app:layout_marginTopPercent="4%"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF" />
        <EditText android:id="@+id/etPassword"
            android:layout_width="250dp"
            android:layout_below="@+id/etUsername"
            android:layout_height="wrap_content"
            app:layout_widthPercent="250%"
            android:inputType="textPassword"
            android:backgroundTint="#FFFFFF"
            android:hint="Password"
            android:textColor="#FFFFFF"
            app:layout_marginLeftPercent="0%"
            app:layout_marginTopPercent="8%"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF" />
        <Button android:id="@+id/bLogin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Password"
            app:layout_marginLeftPercent="7%"
            app:layout_widthPercent="91%"
            app:layout_heightPercent="7%"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            android:text="@string/buttontextLogin"
            android:background="@drawable/gradient_button_bg_color"
            android:onClick="onClick" />
    </LinearLayout>


</RelativeLayout>
