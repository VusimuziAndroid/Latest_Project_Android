<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_bg_color">

    <LinearLayout android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="97%"
        app:layout_marginTopPercent="30%"
        app:layout_marginLeftPercent="1%"
        android:orientation="vertical">
        <EditText android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:inputType="text"
            android:hint=" Username "
            app:layout_marginLeftPercent="12%"
            app:layout_marginTopPercent="4%"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF" />
        <EditText android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_below="@+id/etUsername"
            android:layout_height="wrap_content"
            app:layout_widthPercent="250%"
            android:inputType="textPassword"
            android:backgroundTint="#FFFFFF"
            android:hint="Password"
            android:textColor="#FFFFFF"
            app:layout_marginLeftPercent="0%"
            android:layout_marginTop="30dp"
            app:layout_marginTopPercent="0%"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF" />
        <Button
            android:id="@+id/bSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Password"
            app:layout_marginLeftPercent="7%"
            app:layout_widthPercent="91%"
            app:layout_heightPercent="7%"
            android:layout_marginTop="40dp"
            android:textColor="#FFFFFF"
            android:text="Sign In"
            android:background="@drawable/gradient_button_bg_color"
            android:onClick="onClick" />
        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bSignIn"
            app:layout_marginTopPercent="35%"
            app:layout_marginLeftPercent="22%"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:text="@string/buttontext7"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:onClick="onClickSignUp" />
    </LinearLayout>


</android.support.percent.PercentRelativeLayout>
