<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgRoundPic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="25%"
            app:layout_marginTopPercent="0%"
            app:layout_widthPercent="30%"
            app:layout_heightPercent="30%"/>
        <LinearLayout android:id="@+id/linearLayout2"
            android:layout_below="@+id/imgRoundPic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="2%"
            android:orientation="horizontal">
            <TextView android:id="@+id/tvNames2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="normal"
                android:textSize="25sp"/>
            <TextView android:id="@+id/tvSurnames2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="normal"
                android:textSize="25sp"/>
        </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout6"
        android:layout_below="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:id="@+id/tvRole2"
            app:layout_marginTopPercent="4%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView android:id="@+id/tvAt"
            android:layout_below="@+id/tvRole2"
            app:layout_marginTopPercent="6%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text=" At "
            android:textColor="#000000"/>
        <TextView android:id="@+id/tvOrganization"
            android:layout_below="@+id/tvAt"
            app:layout_marginTopPercent="7%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000000"
            />
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout5"
        android:layout_below="@+id/linearLayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:id="@+id/tvJobAreas2"
            app:layout_marginTopPercent="10%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAt"
            android:textStyle="normal"
            android:textColor="#000000"
            android:textSize="15sp"/>
        <TextView android:id="@+id/tvCountry2"
            app:layout_marginTopPercent="10%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAt"
            android:textStyle="normal"
            android:textColor="#000000"
            android:textSize="15sp"/>
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>
