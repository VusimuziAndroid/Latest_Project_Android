<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

   <LinearLayout android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <ImageView android:id="@+id/imgProfilePicture"
           android:layout_width="60dp"
           android:layout_height="60dp"
           app:layout_marginTopPercent="10%"
           />
       <LinearLayout android:id="@+id/linearLayout2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_marginLeftPercent="20%"
           android:orientation="vertical">
           <TextView android:id="@+id/tvName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_marginTopPercent="15%"
               android:textSize="20sp"
               android:textStyle="bold"
               android:textColor="#000000"/>
           <TextView android:id="@+id/tvRole"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/tvName"
               app:layout_marginTopPercent="16%"
               android:textSize="12sp"
               android:textStyle="normal"
               android:textColor="#6E6E6E"/>
           <TextView android:id="@+id/tvTime"
               android:layout_below="@+id/tvRole"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_marginTopPercent="20%"
               android:textSize="12sp"
               android:textStyle="normal"
               android:textColor="#6E6E6E"/>
       </LinearLayout>
      <!-- <LinearLayout android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           app:layout_marginLeftPercent="0%"
           app:layout_marginTopPercent="18%"
           android:layout_below="@+id/linearLayout2"> -->
         <!--  <ImageView android:id="@+id/imgTimelinePic"
               android:layout_below="@+id/tvStory"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_marginTopPercent="28%"
               /> -->
       </LinearLayout>
    <TextView
        android:id="@+id/tvStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="15%"
        android:layout_below="@+id/linearLayout2"
        android:textSize="15sp"
        android:textStyle="normal"
        android:textColor="#6E6E6E"/>

    <ImageView android:id="@+id/imgTimelinePic"
        android:layout_below="@+id/tvStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="45%"
        />
  <!-- </LinearLayout> -->
     <TextView android:id="@+id/tvStoryLine"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/imgTimelinePic"
         android:layout_marginTop="-20dp"
         android:textColor="#000000"
         android:textStyle="bold"
         android:textSize="15sp"/>
    <TextView android:id="@+id/tvSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStoryLine"
        android:layout_marginTop="-20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <LinearLayout android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSite"
        android:orientation="horizontal">
        <TextView android:id="@+id/tvLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="35%"
            android:textColor="#6E6E6E"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:orientation="horizontal">
        <TextView android:id="@+id/tvLikes2"
            android:layout_width="wrap_content"
            app:layout_marginTopPercent="30%"
            android:layout_height="wrap_content"
            android:textColor="#6E6E6E"
            android:textSize="12sp"/>
        <TextView android:id="@+id/tvComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6E6E6E"
            android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:orientation="horizontal">
       <ImageView android:id="@+id/imgLikes"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_widthPercent="50%"
           app:layout_heightPercent="50%"
           app:layout_marginTopPercent="40%"/>
        <ImageView android:id="@+id/imgComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="50%"
            app:layout_marginTopPercent="50%"/>
        <ImageView android:id="@+id/imgShares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="50%"
            app:layout_marginTopPercent="60%"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/lineaLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgProPicture"
        app:layout_marginTopPercent="87%"
        android:orientation="horizontal">
      <ImageView android:id="@+id/imgProPicture"
          android:layout_width="60dp"
          android:layout_height="60dp"
          app:layout_widthPercent="50%"
          app:layout_heightPercent="50%"
          />
        <LinearLayout android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <TextView android:id="@+id/tvFullName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#000000"
               android:textStyle="bold"
               app:layout_marginTopPercent="0%"
               android:textSize="15sp"/>
            <TextView android:id="@+id/tvPostComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_marginLeftPercent="25%"
                android:textColor="#6E6E6E"
                android:textStyle="normal"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.percent.PercentRelativeLayout>